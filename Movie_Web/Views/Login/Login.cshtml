@model LoginApiResponse

@{
    ViewBag.Title = "Login";
}
<div class="row justify-content-md-center">
    <div class="col-md-5">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            //@Html.ValidationSummary()
            
            @Html.AntiForgeryToken()
            <div class="card">
                <div class="card-header">   
                    <div class="card-title">Login</div>
                </div>
                <div class="card-body">
                    <div class="form-group ms-3">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })
                        @if (ViewBag.error != null)
                        {
                            <span class="badge badge-danger">@ViewBag.error</span>
                        }
                    </div>
                    <div class="form-group ms-3">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group mt-3 ms-3">
                        <input type="submit" name="submit" class="btn btn-danger" value="Login" />
                    </div>
                </div>
            </div>

        }
    </div>
</div>