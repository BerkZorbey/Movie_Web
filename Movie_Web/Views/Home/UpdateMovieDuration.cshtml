@model Movie
@{
    Layout = "_Layout"; ViewBag.Title = "Update a Movie Duration";
}

<h2>Update a Movie Duration</h2>
<form asp-action="UpdateMovieDuration" method="post">
    <div class="form-group" hidden>
        <label for="Id">Id:</label>
        <input class="form-control" name="Id" value="@Model.Id" />
    </div>
    <div class="form-group">
        <label for="Duration">Duration:</label>
        <input class="form-control" name="Duration" value="@Model.Duration" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>
