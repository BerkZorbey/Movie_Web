@model IEnumerable<Movie_Web.Models.Movie>

@{
    ViewBag.Title = "Movies";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Type</th>
            <th>Title</th>
            <th>Director</th>
            <th>Cast</th>
            <th>Country</th>
            <th>Date_Added</th>
            <th>Release_Year</th>
            <th>Rating</th>
            <th>Duration</th>
            <th>Listed_In</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.Type</td>
                <td>@r.Title</td>
                <td>@r.Director</td>
                <td>@r.Cast</td>
                <td>@r.Country</td>
                <td>@r.Date_Added</td>
                <td>@r.Release_Year</td>
                <td>@r.Rating</td>
                <td>@r.Duration</td>
                <td>@r.Listed_In</td>
                <td>@r.Description</td>


            </tr>
        }
    </tbody>
</table>


